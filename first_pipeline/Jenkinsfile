pipeline{
    agent any
    stages{
        stage("Clean Dir"){
            steps{
                deleteDir()
            }
        }
        stage("stage 1"){
            steps{
                echo "This is stage 1"
            }
        }
    }
    post {
        always{
            sh "ls /var/jenkins_home/workspace"
            cleanWs(
            deleteDirs: true,
            disableDeferredWipeout: true,
            )
            sh "ls /var/jenkins_home/workspace"
        }
    }
}